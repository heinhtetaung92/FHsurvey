<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algo.hha.fhsurvey.AnswerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:theme="@style/ToolbarCustomIconColor"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolbarCustomIconColor">


        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/answer_form_linearview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_form_linearview"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/pink_500"
            android:layout_margin="16dp"
            android:layout_alignParentRight="true"/>


        <TextView
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREVIOUS"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/pink_500"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

</RelativeLayout>
