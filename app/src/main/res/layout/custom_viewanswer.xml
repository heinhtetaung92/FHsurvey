<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/viewanswerlist_roundicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/viewanswerlist_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/viewanswerlist_roundicon"/>

    <TextView
        android:id="@+id/viewanswerlist_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewanswerlist_username"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@id/viewanswerlist_roundicon"/>


</RelativeLayout>