<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hha.algo.com.mytopup.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/edittext_label_size"
            android:text="Name"
            android:layout_marginTop="@dimen/activity_text_vertical_margin"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"/>

        <EditText
            android:id="@+id/register_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"
            android:layout_marginRight="@dimen/activity_text_horizontal_margin"
            android:inputType="textPersonName"
            android:maxWidth="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/edittext_label_size"
            android:text="Email"
            android:layout_marginTop="@dimen/activity_text_vertical_margin"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"/>

        <EditText
            android:id="@+id/register_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"
            android:layout_marginRight="@dimen/activity_text_horizontal_margin"
            android:inputType="textEmailAddress"
            android:maxWidth="100dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/edittext_label_size"
            android:text="Password"
            android:layout_marginTop="@dimen/activity_text_vertical_margin"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"/>

        <EditText
            android:id="@+id/register_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"
            android:layout_marginRight="@dimen/activity_text_horizontal_margin"
            android:inputType="textPassword"
            android:maxWidth="100dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/edittext_label_size"
            android:text="Password Confirmation"
            android:layout_marginTop="@dimen/activity_text_vertical_margin"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"/>

        <EditText
            android:id="@+id/register_et_pwd_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"
            android:layout_marginRight="@dimen/activity_text_horizontal_margin"
            android:inputType="textPassword"
            android:maxWidth="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/edittext_label_size"
            android:text="Contact no"
            android:layout_marginTop="@dimen/activity_text_vertical_margin"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"/>

        <EditText
            android:id="@+id/register_et_contactno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"
            android:layout_marginRight="@dimen/activity_text_horizontal_margin"
            android:inputType="phone"
            android:maxWidth="100dp"/>

        <TextView
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="16sp"
            android:background="@drawable/rounded_border2"
            android:layout_marginTop="@dimen/activity_text_vertical_margin"
            android:layout_marginLeft="@dimen/activity_text_horizontal_margin"
            android:layout_marginRight="@dimen/activity_text_horizontal_margin"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"/>


        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/register_progress_wheel_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99d3d3d3"
        android:visibility="invisible"/>


    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/register_progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:barColor="@color/colorPrimary"
        app:progressIndeterminate="true"
        android:visibility="invisible"/>

</FrameLayout>
